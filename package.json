{
  "private": true,
  "packageManager": "pnpm@7.2.1",
  "workspaces": [
    "packages/*",
    "play",
    "docs"
  ],
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "build": "pnpm run -C internal/build start",
    "build:theme": "pnpm run -C packages/designs build",
    "clean": "pnpm run clean:dist",
    "clean:dist": "rimraf dist",
    "cz": "git-cz",
    "dev": "pnpm -C play dev",
    "docs:build": "pnpm run -C docs build",
    "docs:dev": "pnpm run -C docs dev",
    "docs:serve": "pnpm run -C docs serve",
    "gen": "bash ./scripts/gc.sh",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.md,.json --max-warnings 0",
    "lint:commit": "commitlint --from $(git merge-base origin/dev HEAD) --to HEAD > ./commit-lint.txt",
    "lint:fix": "eslint --fix . --ext .vue,.js,.ts,.jsx,.tsx,.md,.json",
    "postinstall": "pnpm stub",
    "prepare": "husky install",
    "release": "bumpp packages/vinicunca/package.json --commit 'chore: release v' --tag",
    "stub": "pnpm run -r --parallel stub",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "typecheck": "run-p typecheck:node typecheck:vite-config",
    "typecheck:node": "tsc -p tsconfig.node.json --noEmit",
    "typecheck:vite-config": "vue-tsc -p tsconfig.vite-config.json --composite false --noEmit"
  },
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "dependencies": {
    "@vinicunca/components": "workspace:*",
    "@vinicunca/constants": "workspace:*",
    "@vinicunca/js-utilities": "^1.2.0",
    "@vinicunca/locale": "workspace:*",
    "@vinicunca/unocss": "workspace:*",
    "@vinicunca/utils": "workspace:*",
    "@vueuse/core": "^8.6.0",
    "dayjs": "^1.11.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@esbuild-kit/cjs-loader": "^2.1.0",
    "@pnpm/find-workspace-packages": "^4.0.12",
    "@pnpm/logger": "^4.0.0",
    "@pnpm/types": "^8.1.0",
    "@types/fs-extra": "^9.0.13",
    "@types/gulp": "^4.0.9",
    "@types/jsdom": "^16.2.14",
    "@types/node": "*",
    "@types/sass": "^1.43.1",
    "@vinicunca/build": "workspace:^0.0.1",
    "@vinicunca/build-utils": "workspace:^0.0.1",
    "@vinicunca/eslint-config": "^1.3.0",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vitejs/plugin-vue-jsx": "^1.3.10",
    "@vitest/ui": "0.12.6",
    "@vue/test-utils": "^2.0.0",
    "@vue/tsconfig": "^0.1.3",
    "bumpp": "^7.1.1",
    "c8": "^7.11.3",
    "chalk": "^5.0.1",
    "commitizen": "^4.2.4",
    "concurrently": "^7.2.1",
    "consola": "^2.15.3",
    "cz-git": "^1.3.4",
    "eslint": "^8.17.0",
    "eslint-define-config": "^1.5.1",
    "expect-type": "^0.13.0",
    "fast-glob": "^3.2.11",
    "husky": "^8.0.1",
    "jsdom": "16.4.0",
    "lint-staged": "^13.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "puppeteer": "^14.3.0",
    "resize-observer-polyfill": "^1.5.1",
    "rimraf": "^3.0.2",
    "sass": "^1.52.2",
    "ts-morph": "^14.0.0",
    "tsx": "^3.4.2",
    "type-fest": "^2.13.1",
    "typescript": "^4.7.3",
    "unplugin-vue-define-options": "^0.6.1",
    "vitest": "0.12.6",
    "vue": "^3.2.37",
    "vue-router": "^4.0.16",
    "vue-tsc": "^0.37.8"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite",
        "react",
        "react-dom"
      ]
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  }
}
