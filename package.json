{
  "private": true,
  "packageManager": "pnpm@7.5.0",
  "description": "Vinicunca Monorepo.",
  "license": "MIT",
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "build": "run-s build:node build:web",
    "build:node": "pnpm run --filter \"./packages/node/*\" --parallel build",
    "build:web": "pnpm run --filter \"./packages/web/*\" --parallel build",
    "clean": "pnpm run -r --parallel clean",
    "dev": "pnpm -C playground dev",
    "test": "vitest"
  },
  "dependencies": {
    "@vinicunca/js-utilities": "^1.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@vinicunca/build": "workspace:*",
    "@vinicunca/cli": "workspace:*",
    "@vinicunca/eslint-config": "^1.3.0",
    "@vinicunca/tsconfig": "workspace:*",
    "bumpp": "^8.2.1",
    "c8": "^7.11.3",
    "commitizen": "^4.2.4",
    "cz-git": "^1.3.4",
    "eslint": "^8.18.0",
    "eslint-define-config": "^1.5.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "tsx": "^3.6.0",
    "typescript": "^4.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  }
}
