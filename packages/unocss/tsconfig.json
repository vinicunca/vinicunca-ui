{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": [
      "es5", "es6", "dom", "dom.iterable"
    ],
    "allowJs": true,
    "jsx": "preserve",
    "noUnusedLocals": true,
    "types": [
      "node"
    ]
  },
  "exclude": [
    "./dist/*"
  ]
}

