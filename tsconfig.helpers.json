{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": [
      "es5", "es6", "dom", "dom.iterable"
    ],
    "allowJs": true,
    "jsx": "preserve",
    "noUnusedLocals": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "unocss/**/*",
    "preset-web-fonts/**/*"
  ],
  "exclude": [
    "**/dist"
  ]
}

