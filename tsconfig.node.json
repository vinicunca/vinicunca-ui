{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ESNext"],
    "types": ["node", "@vinicunca/js-utilities"],
    "skipLibCheck": true
  },
  "include": [
    "builds/**/*",
    "builds/**/*.json",
    "scripts/**/*",
    "packages/vinicunca/version.ts",
    "packages/vinicunca/package.json"
  ],
  "exclude": ["**/__tests__/**", "**/tests/**", "**/dist"]
}
